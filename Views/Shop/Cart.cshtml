@model IEnumerable<Assignment.Models.CartLine>
@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dish.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish)
            </th>
            <th>
                Price per
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Dish.Image != null)
                {
                    <img class="thumbnail" src="~/img/dishs/@item.Dish.Image" alt="Dish Photo" />
                }
            </td>
            <td>
                <a asp-controller="Dishes" asp-action="Details" asp-route-id="@item.Dish.Id">@item.Dish.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dish.Price)
            </td>
            <td>
                <form method="POST" action="/Shop/UpdateCart">
                    <input type="hidden" id="CartLineId" name="CartLineId" value="@item.Id" />
                    <input name="Quantity" id="Quantity" required type="number" min="1" max="999" value="@item.Quantity" />
                    <button class="btn btn-primary btn-sm">Update</button>
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <form method="POST" action="/Shop/RemoveFromCart">
                    <input type="hidden" id="CartLineId" name="CartLineId" value="@item.Id" />
                    <button class="btn btn-danger btn-sm">Remove</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<h3>Total: @ViewData["TotalPrice"]</h3>

<a class="btn btn-success" asp-controller="Shop" asp-action="Checkout">Checkout</a>