<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-3">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Menus" asp-action="Index">Menus</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dishes" asp-action="Index">Dishes</a>
                        </li>                       
                    </ul>

                    <a class="navbar-brand flex-grow-1" asp-area="" asp-controller="Home" asp-action="Index">PetiteKitchen.</a>

                    <ul class="navbar-nav ">
                        <li class="nav-item position-relative d-flex">                            
                            <a class="nav-link text-dark" asp-controller="CartItems" asp-action="Index">
                                <image  style="width: 20px; height: 20px;" src="https://cdn-icons-png.flaticon.com/512/1170/1170678.png" alt="cart" />
                            </a>
                            <span class="position-absolute d-flex justify-content-center align-items-center" style="font-size: 5px; background-color: rgba(255, 0, 0, 0.9); color: white;border-radius: 50%; height: 20px; width: 20px; top: 0; right: 0;">2</span> 
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="max-width: 100%; margin: 0; padding: 0;">
        <main role="main" class="pb-3 w-100">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position: relative;">
        <div class="container d-flex flex-column align-items-center ">
            <p>&copy; 2023 - Assignment - <a asp-area="" asp-controller="Home" asp-action="Index">Petite Kitchen</a></p>
            <p>Do Minh Quang (Wayne) Nguyen - 200501387</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
